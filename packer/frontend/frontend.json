{
  "variables": {
    "aws_region": "ap-south-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-0533167fcff018a86",
      "instance_type": "t3.micro",
      "ssh_username": "ec2-user",
      "ami_name": "three-tier-frontend-{{timestamp}}",
      "ami_description": "Custom frontend AMI with Apache + PHP (Amazon Linux 2023, kernel 6.12)",
      "tags": {
        "Project": "three-tier",
        "Tier": "frontend"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "set -e",
        "echo 'ðŸ“¦ Installing Apache + PHP...'",
        "sudo dnf update -y",
        "sudo dnf install -y httpd php php-mysqlnd php-json git",
        
       
        "echo 'ðŸ”§ Configuring Apache...'",
        "sudo sed -i 's/Listen 80/Listen 80\\nListen 8080/' /etc/httpd/conf/httpd.conf",
        

        "sudo chown -R apache:apache /var/www",
        "sudo chmod 755 /var/www/html",
        

        "sudo systemctl enable httpd",
        "sudo systemctl enable php-fpm",
        
        "echo âœ… Frontend AMI preparation complete!"
      ]
    }
  ]
}