{
  "variables": {
    "aws_region": "ap-south-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-01b6d88af12965bb6",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "three-tier-frontend-{{timestamp}}",
      "ami_description": "Custom frontend AMI with Nginx + PHP (Amazon Linux 2023)",
      "tags": {
        "Project": "three-tier",
        "Tier": "frontend"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "set -e",
        "sudo dnf update -y",
        "sudo amazon-linux-extras enable php8.0",
        "sudo dnf install -y nginx git php php-fpm php-mysqlnd php-json",
        "sudo systemctl enable nginx",
        "sudo systemctl enable php-fpm"
      ]
    }
  ]
}

