{
  "variables": {
    "aws_region": "ap-south-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-02d26659fd82cf299",
      "instance_type": "t3.micro",
      "ssh_username": "ubuntu",
      "ami_name": "three-tier-frontend-{{timestamp}}",
      "ami_description": "Custom frontend AMI with Apache + PHP (Ubuntu Server 24.04 LTS)",
      "tags": {
        "Project": "three-tier",
        "Tier": "frontend"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "set -e",
        "echo 'ðŸ“¦ Installing Apache + PHP...'",
        "sudo apt update -y",
        "sudo apt install -y apache2 php libapache2-mod-php php-mysql php-json git",
        
        "echo 'ðŸ”§ Configuring Apache...'",
        "sudo sed -i 's/Listen 80/Listen 80\\nListen 8080/' /etc/apache2/ports.conf",
        
        "sudo chown -R www-data:www-data /var/www",
        "sudo chmod 755 /var/www/html",
        
        "sudo systemctl enable apache2",
        
        "echo âœ… Frontend AMI preparation complete!"
      ]
    }
  ]
}
