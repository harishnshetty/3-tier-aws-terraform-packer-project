{
  "variables": {
    "aws_region": "ap-south-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-02d26659fd82cf299",
      "instance_type": "t3.micro",
      "ssh_username": "ubuntu",
      "ami_name": "three-tier-backend-php-ubuntu-{{timestamp}}",
      "ami_description": "Custom backend AMI with Apache, PHP, Composer on Ubuntu 24.04 LTS",
      "tags": {
        "Project": "three-tier",
        "Tier": "backend",
        "Base_AMI": "ubuntu-24.04"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "set -e",
        "echo 'üì¶ Updating system and installing required packages...'",
        "sudo apt update -y",
        "sudo apt install -y apache2 php libapache2-mod-php php-mysql php-json composer git wget mysql-client",
        
        "echo '‚öôÔ∏è Configuring Apache...'",
        "sudo systemctl enable apache2",
        "sudo systemctl enable php8.3-fpm || true",
        
        "echo ‚úÖ Backend AMI (PHP) preparation complete!"
      ]
    }
  ]
}
