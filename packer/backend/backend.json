{
  "variables": {
    "aws_region": "ap-south-1",
    "source_ami": "",
    "subnet_id": "",
    "security_group_id": "",
    "db_host": "",
    "db_port": "3306",
    "db_username": "",
    "db_password": "",
    "db_name": "appdb"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "t3.micro",
      "ssh_username": "ec2-user",
      "subnet_id": "{{user `subnet_id`}}",
      "security_group_id": "{{user `security_group_id`}}",
      "ami_name": "three-tier-backend-{{timestamp}}",
      "ami_description": "Custom backend AMI with Apache (httpd), PHP, Composer, and MySQL client (Amazon Linux 2023, kernel 6.12)",
      "tags": {
        "Project": "three-tier",
        "Tier": "backend"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "set -e",
        "sudo dnf update -y",
        "sudo dnf install -y php php-mysqlnd php-json git httpd composer wget",
        "sudo systemctl enable httpd",
        "sudo systemctl enable php-fpm",
        "sudo wget https://dev.mysql.com/get/mysql80-community-release-el9-1.noarch.rpm",
        "sudo dnf install -y mysql80-community-release-el9-1.noarch.rpm",
        "sudo rpm --import https://repo.mysql.com/RPM-GPG-KEY-mysql-2023",
        "sudo dnf install -y mysql-community-client"
      ]
    },
    {
      "type": "file",
      "source": "appdb.sql",
      "destination": "/tmp/appdb.sql"
    },
    {
      "type": "shell",
      "inline": [
        "echo '📦 Importing schema into database {{user `db_name`}} on {{user `db_host`}}...'",
        "mysql --host={{user `db_host`}} --port={{user `db_port`}} --user={{user `db_username`}} --password={{user `db_password`}} {{user `db_name`}} < /tmp/appdb.sql || echo '⚠️ Schema import failed, continuing...'"
      ]
    }
  ]
}
