{
  "variables": {
    "aws_region": "ap-south-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-0533167fcff018a86",   
      "instance_type": "t3.micro",
      "ssh_username": "ec2-user",
      "ami_name": "three-tier-backend-{{timestamp}}",
      "ami_description": "Custom backend AMI with Apache, PHP, Composer",
      "tags": {
        "Project": "three-tier",
        "Tier": "backend"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum update -y",
        "amazon-linux-extras enable php8.0 -y || true",
        "sudo yum install -y php php-mysqlnd php-json git httpd composer",
        "sudo systemctl enable httpd"
      ]
    }
  ]
}
