{
  "variables": {
    "aws_region": "ap-south-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-01b6d88af12965bb6",
      "instance_type": "t3.micro",
      "ssh_username": "ec2-user",
      "ami_name": "three-tier-backend-{{timestamp}}",
      "ami_description": "Custom backend AMI with Apache, PHP, Composer",
      "tags": {
        "Project": "three-tier",
        "Tier": "backend"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "set -e",
        "echo 'ðŸ“¦ Updating system and installing required packages...'",
        "sudo dnf update -y",
        "sudo dnf install -y php php-mysqlnd php-json git httpd composer wget mysql80-community-release-el9-1.noarch.rpm mysql-community-client",
        "sudo rpm --import https://repo.mysql.com/RPM-GPG-KEY-mysql-2023",
        "sudo systemctl enable httpd",
        "sudo systemctl enable php-fpm"
      ]
    }
  ]
}